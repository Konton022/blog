{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www/html": "${workspaceRoot}/src"
            },
            "environment": {
                "XDEBUG_CONFIG": "client_host=host.docker.internal remote_enable=1"
            }
        },
    ]
}

